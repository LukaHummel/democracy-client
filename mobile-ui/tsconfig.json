{
  "compilerOptions": {
    "jsx": "react",
    "module": "commonjs",
    "resolveJsonModule": true,
    "noEmit": true,
    "strict": true,
    "moduleResolution": "node",
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,
    "allowJs": true,
    "skipLibCheck": true
  },
  "exclude": ["node_modules", "android", "ios", "coverage"]
}
