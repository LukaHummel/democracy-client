{
  "name": "client",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android",
    "ios": "react-native run-ios",
    "device:ios": "react-native run-ios --device",
    "device:android": "react-native run-android --device",
    "release:ios": "react-native run-ios --configuration Release --device",
    "release:android": "react-native run-android --configuration Release --device",
    "start": "react-native start",
    "test": "jest",
    "test:watch": "yarn test --watch",
    "coverage": "yarn run test --coverage",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx}'",
    "lint:ts": "tsc && yarn lint:eslint",
    "lint": "yarn lint:ts",
    "format": "prettier --write 'src/**/*.{ts,tsx}' && yarn lint:eslint --fix",
    "format:check": "prettier -c 'src/**/*.{ts,tsx}'"
  },
  "workspaces": {
    "nohoist": [
      "**/@react-native-community",
      "**/@react-native-community/**",
      "**/react-native-gesture-handler",
      "**/react-native-gesture-handler/**",
      "**/react-native-reanimated",
      "**/react-native-reanimated/**",
      "**/react-native-screens",
      "**/react-native-screens/**",
      "**/@react-navigation",
      "**/@react-navigation/**",
      "**/styled-components",
      "**/styled-components/**",
      "**/@democracy-deutschland",
      "**/@democracy-deutschland/**",
      "**/react-native-device-info",
      "**/react-native-device-info/**"
    ]
  },
  "dependencies": {
    "@democracy-deutschland/ui-mobile": "../mobile-ui",
    "@react-native-community/async-storage": "^1.6.2",
    "@react-native-community/masked-view": "^0.1.1",
    "@react-navigation/core": "^5.0.0-alpha.14",
    "@react-navigation/drawer": "^5.0.0-alpha.13",
    "@react-navigation/native": "^5.0.0-alpha.10",
    "@react-navigation/stack": "^5.0.0-alpha.20",
    "react": "16.9.0",
    "react-native": "0.61.1",
    "react-native-device-info": "^3.1.4",
    "react-native-gesture-handler": "^1.4.1",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-reanimated": "^1.3.0",
    "react-native-safe-area-context": "^0.3.6",
    "react-native-screens": "^2.0.0-alpha.3",
    "styled-components": "^4.4.0"
  },
  "devDependencies": {
    "@babel/core": "^7.6.2",
    "@babel/runtime": "^7.6.2",
    "@react-native-community/eslint-config": "^0.0.5",
    "@types/jest": "^24.0.18",
    "@types/react": "16.9.0",
    "@types/react-native": "^0.60.17",
    "@types/react-test-renderer": "16.9.0",
    "@types/styled-components": "^4.1.19",
    "babel-jest": "^24.9.0",
    "eslint": "^6.5.1",
    "jest": "^24.9.0",
    "metro-react-native-babel-preset": "^0.56.0",
    "react-native-testing-library": "^1.11.1",
    "react-test-renderer": "16.9.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "preset": "react-native",
    "moduleFileExtensions": [
      "ts",
      "tsx",
      "js",
      "jsx",
      "json",
      "node"
    ]
  }
}
