{
  "name": "app",
  "version": "0.0.1",
  "private": true,
  "scripts": {
    "android": "react-native run-android --variant=refactorDebug --appIdSuffix=refactor",
    "ios": "react-native run-ios --scheme Refactor --configuration Refactor.Debug",
    "device:ios": "react-native run-ios --device --scheme Refactor --configuration Refactor.Debug",
    "device:android": "react-native run-android --device --variant=refactorDebug --appIdSuffix=refactor",
    "release:ios": "react-native run-ios --device --scheme Refactor --configuration Refactor.Release",
    "release:android": "react-native run-android --variant=refactorRelease --appIdSuffix=refactor",
    "start": "react-native start",
    "clean": "react-native-clean-project",
    "test": "jest -c jest.config.js --coverage",
    "test:watch": "yarn test --watch",
    "e2e:ios-debug": "detox build -c ios.sim.debug && detox test -c ios.sim.debug",
    "e2e:android-debug": "detox build -c android.emu.debug && detox test -c android.emu.debug",
    "apollo:codegen": "apollo client:codegen --target typescript --globalTypesFile=./__generated__/globalTypes.ts",
    "coverage": "yarn run test --coverage",
    "lint:eslint": "eslint 'src/**/*.{ts,tsx,js,jsx}' --fix",
    "lint:ts": "tsc -p tsconfig.json --noEmit",
    "lint": " yarn lint:ts && yarn lint:eslint",
    "format": "prettier --write 'src/**/*.{ts,tsx,js,jsx}'",
    "format:check": "prettier -c 'src/**/*.{ts,tsx,js,jsx}'",
    "pods": "cd ios && pod install && cd .."
  },
  "workspaces": {
    "nohoist": [
      "**/detox**"
    ]
  },
  "dependencies": {
    "@apollo/react-hooks": "^3.1.3",
    "@democracy-deutschland/mobile-ui": "0.0.1",
    "@react-native-community/async-storage": "^1.7.1",
    "@react-native-community/masked-view": "^0.1.6",
    "@react-navigation/core": "^5.1.2",
    "@react-navigation/drawer": "^5.0.3",
    "@react-navigation/material-top-tabs": "^5.0.3",
    "@react-navigation/native": "^5.0.3",
    "@react-navigation/stack": "^5.0.3",
    "@sentry/react-native": "^1.3.0",
    "apollo-cache-inmemory": "^1.6.5",
    "apollo-client": "^2.6.8",
    "apollo-link-context": "^1.0.19",
    "apollo-link-http": "^1.5.16",
    "dateformat": "^3.0.3",
    "graphql": "^14.6.0",
    "graphql-tag": "^2.10.3",
    "jwt-decode": "^2.2.0",
    "lodash.debounce": "^4.0.8",
    "lodash.unionby": "^4.8.0",
    "proxy-polyfill": "^0.3.0",
    "react": "16.9.0",
    "react-native": "0.61.4",
    "react-native-appstate-hook": "^1.0.3",
    "react-native-config": "^0.12.0",
    "react-native-device-info": "^5.5.1",
    "react-native-gesture-handler": "^1.5.6",
    "react-native-keychain": "^4.0.5",
    "react-native-linear-gradient": "^2.5.6",
    "react-native-markdown-view": "https://github.com/Benjamin-Dobell/react-native-markdown-view",
    "react-native-material-tabs": "^4.1.2",
    "react-native-notifications": "^3.1.1",
    "react-native-pdf": "^6.0.1",
    "react-native-permissions": "^2.0.9",
    "react-native-reanimated": "^1.7.0",
    "react-native-safe-area-context": "^0.7.2",
    "react-native-screens": "^2.0.0-beta.2",
    "react-native-search-bar": "^3.5.1",
    "react-native-sha256": "^1.3.6",
    "react-native-splash-screen": "^3.2.0",
    "react-native-svg": "^11.0.1",
    "react-native-swiper": "^1.6.0-rc.3",
    "react-native-tab-view": "^2.13.0",
    "rn-fetch-blob": "^0.11.2",
    "speakingurl": "^14.0.1",
    "styled-components": "4.4.1"
  },
  "devDependencies": {
    "@babel/core": "7.6.2",
    "@babel/runtime": "7.6.2",
    "@react-native-community/cli-platform-android": "2.9.0",
    "@react-native-community/eslint-config": "^0.0.5",
    "@testing-library/react": "^9.4.0",
    "@types/dateformat": "^3.0.1",
    "@types/detox": "^14.5.2",
    "@types/jasmine": "^3.5.3",
    "@types/jest": "^24.9.1",
    "@types/jwt-decode": "^2.2.1",
    "@types/lodash.debounce": "^4.0.6",
    "@types/lodash.unionby": "^4.8.6",
    "@types/react": "16.9.19",
    "@types/react-native": "^0.61.13",
    "@types/react-test-renderer": "16.9.2",
    "@types/speakingurl": "^13.0.2",
    "@types/styled-components": "^4.4.3",
    "@typescript-eslint/eslint-plugin": "^2.19.2",
    "@typescript-eslint/parser": "^2.19.2",
    "babel-jest": "24.9.0",
    "cross-env": "^7.0.0",
    "detox": "^15.2.1",
    "eslint": "^6.8.0",
    "eslint-config-prettier": "^6.10.0",
    "eslint-plugin-better-styled-components": "^1.1.2",
    "eslint-plugin-detox": "^1.0.0",
    "eslint-plugin-import": "^2.20.1",
    "eslint-plugin-jest": "^23.7.0",
    "eslint-plugin-jsx-a11y": "^6.2.3",
    "eslint-plugin-prettier": "^3.1.2",
    "eslint-plugin-react": "^7.18.3",
    "eslint-plugin-react-hooks": "^2.3.0",
    "eslint-plugin-react-native": "^3.8.1",
    "husky": "^3.1.0",
    "jest": "^24.9.0",
    "lint-staged": "^9.5.0",
    "metro-react-native-babel-preset": "0.56.0",
    "prettier": "^1.19.1",
    "react-native-clean-project": "^3.3.0",
    "react-native-testing-library": "^1.12.0",
    "react-test-renderer": "16.9.0",
    "ts-jest": "^24.3.0",
    "typescript": "3.5.2"
  },
  "detox": {
    "test-runner": "jest",
    "runner-config": "./e2e/jest.config.js",
    "configurations": {
      "ios.sim.debug": {
        "type": "ios.simulator",
        "binaryPath": "ios/build/Refactor/Build/Products/Refactor.Debug-iphonesimulator/DEMOCRACY.app",
        "build": "xcodebuild -workspace ios/client.xcworkspace -scheme Refactor -configuration Refactor.Debug -sdk iphonesimulator -derivedDataPath ios/build",
        "device": {
          "type": "iPhone 11",
          "os": "13.3"
        }
      },
      "android.emu.debug": {
        "binaryPath": "android/app/build/outputs/apk/debug/app-debug.apk",
        "build": "cd android && ./gradlew assembleDebug assembleAndroidTest -DtestBuildType=debug && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Pixel_2_API_28"
        }
      },
      "android.emu.release": {
        "binaryPath": "android/app/build/outputs/apk/release/app-release.apk",
        "build": "cd android && ./gradlew assembleRelease assembleAndroidTest -DtestBuildType=release && cd ..",
        "type": "android.emulator",
        "device": {
          "avdName": "Nexus_5X_API_26"
        }
      }
    }
  }
}
