{
  "name": "democracyclient",
  "version": "0.0.7",
  "private": true,
  "scripts": {
    "test": "eslint . && jest && flow",
    "test:jest": "jest",
    "test:lint": "eslint .",
    "test:flow": "flow",
    "start": "node node_modules/react-native/local-cli/cli.js start",
    "start:android": "react-native run-android",
    "start:ios": "react-native run-ios",
    "build:ios:clean":
      "cd ios && xcodebuild clean -project democracyclient.xcodeproj -configuration Release -alltargets",
    "build:ios:archive":
      "cd ios && xcodebuild archive -project democracyclient.xcodeproj -scheme democracyclient-prod -archivePath build/archives/democracyclient.xcarchive",
    "build:ios:ipa":
      "cd ios && xcodebuild -allowProvisioningUpdates -exportArchive -archivePath build/archives/democracyclient.xcarchive -exportPath build/ipa/democracyclient -exportOptionsPlist democracyclient/info.plist",
    "build:ios":
      "npm run build:ios:clean && npm run build:ios:archive && npm run build:ios:ipa",
    "build:android": "cd android && ./gradlew assembleRelease",
    "build:all": "npm run build:android && npm run build:ios",
    "version": "version-ios.sh"
  },
  "dependencies": {
    "apollo-cache-inmemory": "^1.1.5",
    "apollo-cache-persist": "^0.1.1",
    "apollo-client": "^2.2.0",
    "apollo-link": "^1.0.7",
    "apollo-link-http": "^1.3.2",
    "apollo-link-state": "^0.4.0",
    "eslint": "^4.17.0",
    "eslint-config-airbnb": "^16.1.0",
    "eslint-plugin-import": "^2.7.0",
    "eslint-plugin-jsx-a11y": "^6.0.2",
    "eslint-plugin-react": "^7.4.0",
    "graphql": "^0.13.1",
    "graphql-anywhere": "^4.1.3",
    "graphql-tag": "^2.6.1",
    "lodash": "^4.17.4",
    "moment": "^2.20.1",
    "prisma": "^1.0.11",
    "prop-types": "^15.6.0",
    "react": "16.2.0",
    "react-apollo": "^2.0.4",
    "react-native": "^0.53.2",
    "react-native-config": "^0.11.5",
    "react-native-navigation": "^1.1.382",
    "react-native-swiper": "^1.5.13",
    "react-native-vector-icons": "^4.5.0",
    "serve": "^6.4.3",
    "styled-components": "^3.0.2",
    "typescript": "^2.6.2"
  },
  "devDependencies": {
    "babel-eslint": "^8.2.1",
    "babel-jest": "22.1.0",
    "babel-preset-react-native": "4.0.0",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-flowtype": "^2.41.0",
    "eslint-plugin-prettier": "^2.5.0",
    "eslint-plugin-react-native": "^3.2.1",
    "eslint-plugin-standard": "^3.0.1",
    "flow-bin": "^0.63.1",
    "jest": "22.1.4",
    "prettier": "^1.10.2",
    "react-test-renderer": "16.2.0",
    "reactotron-react-native": "^1.14.0"
  },
  "jest": {
    "preset": "react-native"
  }
}
